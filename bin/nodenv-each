#!/usr/bin/env bash
#
# Summary: Execute a command for each Node version
#
# Usage: nodenv each [-v] <command> [arg1 arg2...]
#
# Executes a command for each Node version by setting NODENV_VERSION.
# Failures are collected and reported at the end.
#
#    -v  Verbose mode. Prints a header for each node
#
set -e
[ -n "$NODENV_DEBUG" ] && set -x

# Provide nodenv completions
if [ "$1" = "--complete" ]; then
  echo -v
  nodenv shims --short
  exit
fi

if [ "$1" = "-v" ]; then
  verbose=1
  shift
fi

case "$1" in
""  | -* )
  nodenv-help --usage each >&2
  exit 1
  ;;
esac

GRAY=""
RED=""
YELLOW=""
NORMAL=""

if [ -t 1 ]; then
  GRAY="\033[1;30m"
  RED="\033[0;31m"
  YELLOW="\033[0;33m"
  NORMAL="\033[0m"
fi

failed_nodes=""

trap "exit 1" INT

for node in $(nodenv versions --bare); do
  if [ -n "$verbose" ]; then
    header="===[$node]==================================================================="
    header="${header:0:72}"
    header="${header/[/[${YELLOW}}"
    header="${header/]/${GRAY}]}"
    echo -e "${GRAY}${header}${NORMAL}"
  fi

  NODENV_VERSION="$node" "$@" || failed_nodes="$failed_nodes $node"

  [ -n "$verbose" ] && echo
done

if [ -n "$failed_nodes" ]; then
  echo -e "${RED}FAILED IN:${failed_nodes}${NORMAL}"
  exit 1
fi
